<!DOCTYPE html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>single fixed</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />

    <!-- CSS here -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/css/fontawesome.min.css" />
    <link rel="stylesheet" href="/css/jquery-ui.css" />
    <link rel="stylesheet" href="/css/animate.min.css" />
    <link rel="stylesheet" href="/css/magnific-popup.css" />
    <link rel="stylesheet" href="/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="/css/meanmenu.css" />
    <link rel="stylesheet" href="/css/slick.css" />
    <link rel="stylesheet" href="/css/default.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/responsive.css" />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />

    <style>
      /* CSS for the toast notification */
      .toast {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        max-width: 300px;
        background-color: #292929;
        color: white;
        border-radius: 5px;
        padding: 10px;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
      }

      .toast.show {
        opacity: 1;
      }
    </style>
  </head>

  <body>
    <!-- preloader -->
    <div id="loader-wrapper">
      <div id="loader"></div>
    </div>

    <!-- header -->
    <%- include('../partials/header') %>

    <section class="single-product mb-90">
      <div class="container-fluid">
        <div class="shop-wrapper">
          <div class="single-product-top">
            <div class="row">
              <div class="col-xl-6 col-lg-6 col-12">
                <div class="shop-img">
                  <div class="row">
                    <div class="col-8">
                      <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="tab-1">
                          <div
                            class="product-img zoomable d-flex justify-content-center"
                          >
                            <a href="" class="popup-image"
                              ><img
                                src="<%= service.images[0] %>"
                                class="zoomable__img"
                                alt=""
                                style="width: 500px; height: auto"
                            /></a>
                          </div>
                        </div>
                        <div class="tab-pane fade" id="tab-2">
                          <div
                            class="product-img zoomable d-flex justify-content-center"
                          >
                            <a href="" class="popup-image"
                              ><img
                                src="<%= service.images[1] %>"
                                class="zoomable__img w-100"
                                alt=""
                                style="width: 500px; height: auto"
                            /></a>
                          </div>
                        </div>
                        <div class="tab-pane fade" id="tab-3">
                          <div
                            class="product-img zoomable d-flex justify-content-center"
                          >
                            <a href="" class="popup-image"
                              ><img
                                src="<%= service.images[2] %>"
                                class="zoomable__img w-100"
                                alt=""
                                style="width: 500px; height: auto"
                            /></a>
                          </div>
                        </div>
                        <div class="tab-pane fade" id="tab-4">
                          <div
                            class="product-img zoomable d-flex justify-content-center"
                          >
                            <a href="" class="popup-image"
                              ><img
                                src="<%= service.images[3] %>"
                                class="zoomable__img w-100"
                                alt=""
                                style="width: 500px; height: auto"
                            /></a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-2">
                      <div
                        class="nav nav-pills has-border-img"
                        id="v-pills-tab"
                        role="tablist"
                        aria-orientation="vertical"
                      >
                        <a class="active img-" data-toggle="pill" href="#tab-1">
                          <img
                            src="<%= service.images[0] %>"
                            class="w-100"
                            alt=""
                          />
                        </a>
                        <a data-toggle="pill" href="#tab-2">
                          <img
                            src="<%= service.images[1] %>"
                            class="w-100 mt-5-px"
                            alt=""
                          />
                        </a>
                        <a data-toggle="pill" href="#tab-3">
                          <img
                            src="<%= service.images[2] %>"
                            class="w-100 mt-5-px"
                            alt=""
                          />
                        </a>
                        <a data-toggle="pill" href="#tab-4">
                          <img
                            src="<%= service.images[3] %>"
                            class="w-100 mt-5-px"
                            alt=""
                          />
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-12">
                <div class="single-product-sidebar">
                  <div class="product-content">
                    <div class="single-product-title">
                      <h2><%= service.title %></h2>
                    </div>
                    <div class="single-product-price">
                      ₹ <span><%= service.sellingPrice %>/-</span>
                    </div>

                    <a
                      href="/service/<%= service._id %>/book"
                      class="bg-primary px-4 mt-4 py-2 rounded d-flex justify-content-center align-items-center text-white"
                      >Book Now</a
                    >
                    <div class="single-product-action mt-35"></div>
                  </div>
                  <div class="single-product-category">
                    <ul>
                      <li class="mb-0"><a href="" class="title">Tags : </a></li>
                      <li class="mb-0">
                        <a href=""><%= service.category %></a>
                      </li>
                      <li class="mb-0">
                        <a href=""><%= service.subCategory %></a>
                      </li>
                    </ul>
                  </div>
                  <div class="mt-4">
                    <h6>Description</h6>
                    <p><%= service.description %></p>
                  </div>

                  <!-- Reviews Section -->
                  <div class="mt-5">
                    <h4 class="fw-bold mb-4 border-bottom pb-2">
                      Reviews
                    </h4>

                    <% if (reviews.length > 0) { %> <% reviews.forEach(review =>
                    { %>
                    <div class="card mb-3 shadow-sm  rounded-3">
                      <div class="card-body">
                        <div
                          class="d-flex justify-content-between align-items-center"
                        >
                          <div>
                            <h6 class="fw-semibold mb-0 text-dark">
                              <i
                                class="bi bi-person-circle me-2 text-secondary"
                              ></i>
                              <%= review.userId?.name || 'Anonymous' %>
                            </h6>
                            <small class="text-muted">
                              <%= new
                              Date(review.createdAt).toLocaleDateString() %>
                            </small>
                          </div>
                          <!-- ⭐ Star Rating -->
                          <div class="text-warning fs-6">
                            <% for (let i = 1; i <= 5; i++) { %> <% if (i <=
                            review.rating) { %>
                            <i class="bi bi-star-fill"></i>
                            <% } else { %>
                            <i class="bi bi-star"></i>
                            <% } %>
                            <% } %>
                          </div>
                        </div>

                        <p class="mt-3 mb-0 text-secondary fst-italic">
                          "<%= review.description %>"
                        </p>
                      </div>
                    </div>
                    <% }) %>
                    <% } else { %>
                    <div
                      class="alert alert-light border text-center text-muted"
                    >
                      <i class="bi bi-emoji-neutral me-2"></i>No reviews yet.
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- single product end -->

    <!-- related product start -->
    <% if(relatedServices?.length > 0) { %>
    <section class="related-product mt-120 mb-100">
      <div class="container-fluid">
        <div class="generic-title text-center">
          <h2 class="mb-20">Related Services</h2>
        </div>

        <div class="main-product-carousel owl-carousel red-nav mt-50">
          <% relatedServices.forEach((service) => { %>

          <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12">
            <div class="product-box mb-40">
              <div class="product-box-wrapper">
                <div class="product-img">
                  <a
                    href="/service/<%= service._id %>"
                    class="product-category"
                  >
                    <img
                      src="<%= service.images[0] %>"
                      class="w-100"
                      alt="<%= service.title %>"
                    />
                  </a>
                </div>

                <div class="product-desc pb-20">
                  <a href="/service/<%= service._id %>" class="product-title"
                    ><%= service.title %></a
                  >
                  <span
                    >₹
                    <%= service.sellingPrice %></span
                  >
                </div>
              </div>
              <a
                href="/service/<%= service._id %>/book"
                class="bg-primary px-4 py-2 rounded d-flex justify-content-center align-items-center text-white"
                >Book Now</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <% } %>

    <!-- related product end -->

    <!-- footer section start -->
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- JS here -->
    <script src="/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/isotope.pkgd.min.js"></script>
    <script src="/js/one-page-nav-min.js"></script>
    <script src="/js/slick.min.js"></script>
    <script src="/js/jquery.meanmenu.min.js"></script>
    <script src="/js/ajax-form.js"></script>
    <script src="/js/fontawesome.min.js"></script>
    <script src="/js/wow.min.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/jquery.scrollUp.min.js"></script>
    <script src="/js/imagesloaded.pkgd.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/plugins.js"></script>
    <script src="/js/main.js"></script>
  </body>

</html>
