    <script>
      // SALES REPORT
      function generateExcelReport() {
        const startDate = document.getElementById("startDate").value;
        const endDate = document.getElementById("endDate").value;

        if (startDate === "" || endDate == "") {
          document.getElementById("reportDateError").textContent =
            "select both dates";
          return false;
        }

        axios
          .get(`/vendor/sales-report/excel/${startDate}/${endDate}`, {
            responseType: "blob",
            headers: {
              "Content-Type":
                "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            },
          })
          .then((response) => {
            document.getElementById("reportDateError").textContent = "";
            document.getElementById("startDate").value = "";
            document.getElementById("endDate").value = "";

            const url = window.URL.createObjectURL(new Blob([response.data]));
            const link = document.createElement("a");
            link.href = url;
            link.setAttribute("download", "sales_report.xlsx");
            document.body.appendChild(link);
            link.click();
          })
          .catch((error) => {
            console.error("Error generating Excel report:", error);
          });
      }

      // CHART FOR SALES DATA
      const ctx = document.getElementById("myChart");
      function getSalesData() {
        const salesDataInput = document.getElementById("salesData");
        if (salesDataInput) {
          const salesData = JSON.parse(salesDataInput.value);
          return salesData;
        }
        return [];
      }

      const salesData = getSalesData();

      const chartLabels = salesData.map((item) => item.date);
      const chartValues = salesData.map((item) => item.totalSales);

      new Chart(ctx, {
        type: "bar",
        data: {
          labels: chartLabels,
          datasets: [
            {
              label: "Sales",
              data: chartValues,
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      // CHART FOR TOP CATEGORY ON SALES
      const ctx2 = document.getElementById("myChartCategory");
      function getSalesCategory() {
        const categoryDataInput = document.getElementById("categoryData");
        if (categoryDataInput) {
          const categoryData = JSON.parse(categoryDataInput.value);
          return categoryData;
        }
        return [];
      }

      const salesCategory = getSalesCategory();

      const chartLabelsCategory = salesCategory.map((item) => item.category);
      const chartValuesCategory = salesCategory.map((item) => item.totalOrders);

      new Chart(ctx2, {
        type: "doughnut",
        data: {
          labels: chartLabelsCategory,
          datasets: [
            {
              label: "",
              data: chartValuesCategory,
              backgroundColor: [
                "rgba(255, 99, 132, 0.5)",
                "rgba(54, 162, 235, 0.5)",
                "rgba(255, 206, 86, 0.5)",
              ],
              borderColor: [
                "rgba(255, 99, 132, 1)",
                "rgba(54, 162, 235, 1)",
                "rgba(255, 206, 86, 1)",
                "rgba(75, 192, 192, 1)",
              ],
              borderWidth: 1,
            },
          ],
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: "top",
            },
            title: {
              display: true,
              text: "",
            },
          },
        },
      });
    </script>

    <script>
      function uploadProfileImage(input) {
        if (input.files && input.files[0]) {
          const file = input.files[0];
          const maxSize = 5 * 1024 * 1024; // 5MB

          if (file.size > maxSize) {
            Toastify({
              text: "File is too large! Maximum size is 5MB.",
              duration: 3000,
              gravity: "top",
              position: "right",
              style: {
                background: "linear-gradient(to right, #ff5f6d, #ffc371)",
              },
            }).showToast();
            input.value = ""; // Clear input
            return;
          }

          const reader = new FileReader();
          reader.onload = function (e) {
            const base64Image = e.target.result;

            const dropdownImg = document.getElementById(
              "vendor-profile-img-dropdown",
            );
            const topImg = document.getElementById("vendor-profile-img-top");
            const originalDropdownSrc = dropdownImg.src;
            const originalTopSrc = topImg.src;

            // Show loading state
            dropdownImg.style.opacity = "0.5";
            topImg.style.opacity = "0.5";

            axios
              .post("/vendor/uploadProfilePicture", {
                image: base64Image,
              })
              .then((response) => {
                if (response.data.success) {
                  const newUrl = response.data.profilePicture;
                  dropdownImg.src = newUrl;
                  topImg.src = newUrl;

                  // Success Toast/Alert
                  Toastify({
                    text: "Profile picture updated successfully!",
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    style: {
                      background: "linear-gradient(to right, #00b09b, #96c93d)",
                    },
                  }).showToast();
                } else {
                  alert(
                    "Failed to upload profile picture: " +
                      (response.data.message || "Unknown error"),
                  );
                  dropdownImg.src = originalDropdownSrc;
                  topImg.src = originalTopSrc;
                }
              })
              .catch((error) => {
                console.error("Error uploading profile picture:", error);
                alert("Error uploading profile picture. Please try again.");
                dropdownImg.src = originalDropdownSrc;
                topImg.src = originalTopSrc;
              })
              .finally(() => {
                dropdownImg.style.opacity = "1";
                topImg.style.opacity = "1";
              });
          };
          reader.readAsDataURL(input.files[0]);
        }
      }
    </script>

