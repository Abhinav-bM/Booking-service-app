                <ul class="menu-list flex-grow-1 mt-3">
                    <li>
                        <a class="m-link" href="/vendor/dashboard"
                          ><i class="icofont-home fs-5"></i> <span>Dashboard</span></a
                        >
                      </li>
          
                      <li>
                        <a class="m-link" href="/vendor/servicesList"
                          ><i class="icofont-truck-loaded fs-5"></i>Services</a
                        >
                      </li>
                      <li>
                        <a class="m-link" href="/vendor/addService"
                          ><i class="icofont-truck-loaded fs-5"></i>Add Service</a
                        >
                      </li>
                      <li>
                        <a class="m-link active" href="/vendor/bookings"
                          ><i class="icofont-notepad"></i> <span>Bookings</span></a
                        >
                      </li>
          
                      <li>
