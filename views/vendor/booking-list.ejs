    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> 
      Booking List </title>
    <link rel="icon" href="favicon.ico" type="image/x-icon"> 

    <link rel="stylesheet" href="/vendor/assets/plugin/datatables/responsive.dataTables.min.css">
    <link rel="stylesheet" href="/vendor/assets/plugin/datatables/dataTables.bootstrap5.min.css">

